<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/user/signup.css">

</head>

<body>

    <section class="hero-video-section">
        <div class="video-frame">
            <video autoplay muted loop playsinline>
                <source src="https://res.cloudinary.com/dkrantic4/video/upload/v1771580181/chrono-lux/videos/watch4.mp4"
                    type="video/mp4">
            </video>
        </div>

        <div class="glass-card card-wrapper">
            <h1>Create your account</h1>
            <p class="subtitle">Enter your details to get started</p>

            <form id="signform" method="post" action="/signup">

                <div class="form-row">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" name="name" id="name" value="<%= formData?.name || ''%>" required>
                        <div id="error1" class="error-message"></div>
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" name="lName" id="lName" value="<%= formData?.lName || ''%>" required>
                        <div id="error2" class="error-message"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" name="email" id="email" value="<%= formData.email || '' %>" required>
                    <div id="error3" class="error-message"></div>
                </div>

                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" name="phone" id="phone" value="<%= formData.phone || ''%>" required>
                    <div id="error4" class="error-message"></div>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <div class="password-container">
                        <input type="password" name="password" id="password" required>
                        <i class="fa-solid fa-eye toggle-password" onclick="togglePassword('password', this)"></i>
                        <div id="error5" class="error-message"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Confirm Password</label>
                    <div class="password-container">
                        <input type="password" name="cPassword" id="cPassword" required>
                        <i class="fa-solid fa-eye toggle-password" onclick="togglePassword('cPassword', this)"></i>
                        <div id="error6" class="error-message"></div>
                    </div>
                </div>

                <% if (message) { %>
                    <div class="alert alert-danger text-center">
                        <%= message %>
                    </div>
                    <% } %>

                        <div class="referral-section">
                            <h3 class="referral-title">Join with a Friend?</h3>
                            <p class="referral-subtitle">Did someone refer you to our platform? Enter their referral
                                code below!</p>

                            <label class="referral-question">Do you have a referral code?</label>
                            <div class="checkbox-container">
                                <input type="checkbox" id="hasReferral" onchange="toggleReferralInput()">
                                <span>Yes</span>
                            </div>

                            <div id="referralInputWrapper" class="referral-input-wrapper">
                                <label class="referral-success-msg">Great! Enter the code</label>
                                <input type="text" name="referralCode" id="referralCode" placeholder="CODE">
                            </div>
                        </div>

                        <button type="submit" class="btn-primary">Create Account</button>

            </form>

            <div class="divider">Or</div>

            <a href="/auth/google" class="btn-google">
                <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google Logo" class="google-icon">
            </a>

            <p class="footer-link">
                Already have an account? <a href="/login">Sign in</a>
            </p>
        </div>
    </section>

    <script>
        function toggleReferralInput() {
            const checkbox = document.getElementById('hasReferral');
            const wrapper = document.getElementById('referralInputWrapper');
            wrapper.style.display = checkbox.checked ? 'block' : 'none';
        }

        function togglePassword(inputId, icon) {
            const input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }

        const nameid = document.getElementById("name");
        const lnameid = document.getElementById("lName");
        const emailid = document.getElementById("email");
        const phoneid = document.getElementById("phone");
        const passid = document.getElementById("password");
        const cpassid = document.getElementById("cPassword");

        const error1 = document.getElementById("error1");
        const error2 = document.getElementById("error2");
        const error3 = document.getElementById("error3");
        const error4 = document.getElementById("error4");
        const error5 = document.getElementById("error5");
        const error6 = document.getElementById("error6");

        function nameValidateChecking() {
            const nameval = nameid.value.trim();
            const pattern = /^[A-Za-z\s]+$/;

            if (!nameval) {
                error1.innerHTML = "Please enter a valid first name";
                error1.style.display = "block";
            } else if (!pattern.test(nameval)) {
                error1.innerHTML = "Only letters allowed";
                error1.style.display = "block";
            } else {
                error1.style.display = "none";
            }
        }

        function lnameValidateChecking() {
            const lnameval = lnameid.value.trim();
            const pattern = /^[A-Za-z\s]+$/;

            if (!lnameval) {
                error2.innerHTML = "Please enter a valid last name";
                error2.style.display = "block";
            } else if (!pattern.test(lnameval)) {
                error2.innerHTML = "Only letters allowed";
                error2.style.display = "block";
            } else {
                error2.style.display = "none";
            }
        }

        function emailValidateChecking() {
            const emailval = emailid.value.trim();
            const pattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

            if (!pattern.test(emailval)) {
                error3.innerHTML = "Invalid email format";
                error3.style.display = "block";
            } else {
                error3.style.display = "none";
            }
        }

        function phoneValidateChecking() {
            const phoneval = phoneid.value.trim();

            if (phoneval.length !== 10 || isNaN(phoneval)) {
                error4.innerHTML = "Enter 10 digit phone number";
                error4.style.display = "block";
            } else {
                error4.style.display = "none";
            }
        }

        function passValidateChecking() {
            const pass = passid.value;
            const cpass = cpassid.value;
            const alpha = /[a-zA-Z]/;
            const digit = /\d/;

            if (pass.length < 8) {
                error5.innerHTML = "Must contain at least 8 characters";
                error5.style.display = "block";
            } else if (!alpha.test(pass) || !digit.test(pass)) {
                error5.innerHTML = "Must contain letters and digits";
                error5.style.display = "block";
            } else {
                error5.style.display = "none";
            }

            if (pass !== cpass) {
                error6.innerHTML = "Passwords do not match";
                error6.style.display = "block";
            } else {
                error6.style.display = "none";
            }
        }

        document.getElementById("signform").addEventListener("submit", function (e) {
            nameValidateChecking();
            lnameValidateChecking();
            emailValidateChecking();
            phoneValidateChecking();
            passValidateChecking();

            if (
                error1.innerHTML ||
                error2.innerHTML ||
                error3.innerHTML ||
                error4.innerHTML ||
                error5.innerHTML ||
                error6.innerHTML
            ) {
                e.preventDefault();
            }
        });
    </script>


</body>

</html>
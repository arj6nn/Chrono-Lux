<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chrono Lux - User Management</title>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/styles/admin/user-management.css">
</head>

<body>

    <!-- Sidebar -->
    <%- include('../partials/admin/sidebar') %>

        <div class="main-content">

            <h2>Users</h2>
            <p>Manage your users and their permissions</p>

            <!-- SEARCH FORM (backend search) -->
            <form id="searchForm" action="/admin/users" method="GET" class="search-container">
                <input type="text" id="searchInput" name="search" value="<%= search || '' %>"
                    placeholder="Search users by name or email...">
            </form>

            <!-- TABLE -->
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Join Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if (users.length> 0) { %>
                            <% users.forEach(user=> { %>

                                <tr>
                                    <td>
                                        <div class="user-info">
                                            <span class="user-name">
                                                <%= user.name %>
                                            </span>
                                            <span class="user-email">
                                                <%= user.email %>
                                            </span>
                                        </div>
                                    </td>

                                    <td>
                                        <%= user.isAdmin ? "Admin" : "Customer" %>
                                    </td>

                                    <td>
                                        <% if (user.isBlocked) { %>
                                            <span class="status-badge status-blocked">Blocked</span>
                                            <% } else { %>
                                                <span class="status-badge status-active">Active</span>
                                                <% } %>
                                    </td>

                                    <td>
                                        <% const joinDate=user.createdAt || user.createdOn; %>
                                            <%= joinDate ? joinDate.toLocaleDateString("en-US") : "—" %>
                                    </td>

                                    <td>
                                        <button class="action-btn <%= user.isBlocked ? 'btn-unblock' : 'btn-block' %>"
                                            onclick="toggleBlock('<%= user._id %>', <%= user.isBlocked ? 1 : 0 %>)">
                                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 
                                                12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 
                                                5.636" />
                                            </svg>
                                        </button>
                                    </td>
                                </tr>

                                <% }) %>

                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" style="text-align:center;padding:20px;">No users found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>

            </div>
            <!-- PAGINATION -->
            <div class="pagination-wrapper">
                <div class="pagination">

                    <% if (page> 1) { %>
                        <a class="page-btn" href="/admin/users?page=<%= page - 1 %>&search=<%= search || '' %>">‹
                            Prev</a>
                        <% } else { %>
                            <span class="page-btn disabled">‹ Prev</span>
                            <% } %>

                                <div class="page-numbers">
                                    <% for (let p=1; p <=totalPages; p++) { %>
                                        <a href="/admin/users?page=<%= p %>&search=<%= search || '' %>"
                                            class="page-number <%= p === page ? 'active' : '' %>">
                                            <%= p %>
                                        </a>
                                        <% } %>
                                </div>

                                <% if (page < totalPages) { %>
                                    <a class="page-btn"
                                        href="/admin/users?page=<%= page + 1 %>&search=<%= search || '' %>">Next ›</a>
                                    <% } else { %>
                                        <span class="page-btn disabled">Next ›</span>
                                        <% } %>

                </div>
            </div>
        </div>

        <script>
            let typingTimer;
            const searchInput = document.getElementById("searchInput");

            searchInput.addEventListener("keyup", function () {
                clearTimeout(typingTimer);
                typingTimer = setTimeout(() => {
                    document.getElementById("searchForm").submit();
                }, 400); // waits 400ms after typing stops
            });

            searchInput.addEventListener("keydown", function (e) {
                if (e.key === "Enter") {
                    e.preventDefault();
                    document.getElementById("searchForm").submit();
                }
            });


            async function toggleBlock(userId, isBlocked) {
                let action = isBlocked ? "Unblock" : "Block";

                const confirm = await Swal.fire({
                    title: `${action} this user?`,
                    text: `Are you sure you want to ${action.toLowerCase()} this user?`,
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: action,
                    cancelButtonText: "Cancel",
                    confirmButtonColor: isBlocked ? "#27ae60" : "#c0392b"
                });

                if (!confirm.isConfirmed) return;

                const response = await fetch(`/admin/toggle-block/${userId}`, { method: "PATCH" });
                const data = await response.json();

                if (data.success) {
                    Swal.fire({
                        title: "Success!",
                        text: `User ${action.toLowerCase()}ed successfully.`,
                        icon: "success",
                        timer: 1200,
                        showConfirmButton: false
                    }).then(() => location.reload());
                } else {
                    Swal.fire("Error", data.message || "Something went wrong!", "error");
                }
            }
        </script>

</body>

</html>
